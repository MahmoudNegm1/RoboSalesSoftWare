@using BLL.RoboMind.Resources
<!DOCTYPE html>
<html dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft? "rtl" : "ltr")">
@if (System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft)
{

    ViewBag.IsRTL = true;
}
else
{
    ViewBag.IsRTL = false;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoboSalesSoftWare</title>
    <script src="/lib/jquery/dist/jquery.min.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RoboSalesSoftWare.styles.css" asp-append-version="true" />
@*     <Link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" /> 
 *@

    <style>
        .inline-block {
            display: inline-block;
            margin: 10px; /* Optional: Add margin for spacing between the divs */
            text-align: center; /* Optional: Center the content within each div */
        }

            .inline-block img {
                max-width: 100%; /* Ensure the image doesn't exceed its container's width */
                height: auto; /* Maintain the aspect ratio of the image */
                display: block; /* Remove extra space beneath the image */
            }

        body {
            background-color: #794848;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
       /*  .container{
            min-height: 100vh;
        } */
        footer{
            background-color:bisque;
        height:50px
        }
    </style>
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-regular fa-robot-astromech"></i>RoboSalesSoftWare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fa fa-home" aria-hidden="true"></i>
                                @CommonRes.HomeLabel
                            </a>
                        </li>
                    
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="VegatablesType" asp-action="Index">
                                <i class="fa-solid fa-lemon">   </i>
                                @CommonRes.TypesLabel
                            </a>
                        </li>
                          <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Receipt" asp-action="Index">
                                <i class="fas fa-receipt"></i>
                                @CommonRes.ReceiptLabel
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MarketData" asp-action="Index">
                                <i class="fa-solid fa-database"></i>
                                @CommonRes.MarketDataLabel
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Receipt" asp-action="GetAllReceipt">
                                <i class="fa-solid fa-database"></i>
                                @CommonRes.ReceiptTotalLabel
                            </a>
                        </li>
                    </ul>
                </div>
                <div style="margin-left:10px">
                    <partial name="_ChangeLanguage"></partial>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  
  
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
